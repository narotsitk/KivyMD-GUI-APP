<Image_Note_Tab>:
    ScrollView:
        MDGridLayout:
            id: image_list
            cols: 1
            adaptive_height: True
            padding: dp(4), dp(4)
            spacing: dp(4)

    MDFloatingActionButtonSpeedDial:
        data: root.data
        root_button_anim: True
        callback: root.callback

<Image_list>:
    on_press: root.on_press_image()
    FloatLayout:
        MDFloatingActionButton:
            pos: root.x + 3, root.y + 35
            icon: "trash-can"
            icon_color: 1,0,0,1
            theme_icon_color: "Error"
            on_press: root.on_press_delete(root)


<Image_Note_Create>:
    MDToolbar:
        id: md_tool_bar
        pos_hint: {'top': 1}
        title: "Create Image Note"
        left_action_items: [['keyboard-backspace', lambda x: root.return_back()]]

    MDCard:
        id: note_card
        padding: 16
        size_hint: None, None
        height: root.height - 129
        width: root.width - 10
        pos_hint: {'center_x': .5,'center_y': .5}

        MDRelativeLayout:
            id: r_layout
            size_hint: None, None
            width: root.width - 40
            height: root.height - 165

            MDTextFieldRect:
                id: image_note
                pos_hint: {'center_y': .2}
                multiline: True
                hint_text: "Write Some Notes"
                size_hint_y: .4
                size_hint_x: root.size_hint_x
                on_text: root.add_widget_toolbar(self.text)




<CameraScreen>
    MDFloatLayout:
        MDToolbar:
            pos_hint: {"center_x": .5, "center_y": .96}
            right_action_items: [["close-box", lambda x: root.Call_Back()]]
        MDIconButton:
            icon: "camera"
            pos_hint: {"center_x": .5,"center_y": 0.05}
            on_press: root.click_picture()

<Image_Note>:
    text: "Welcome To Image Note"
    secondary_text: "You can add your Notes here"

    IconLeftWidget:
        icon: "image-plus"

    IconRightWidget:
        icon: "trash-can"
        on_press: root.remove_this()
