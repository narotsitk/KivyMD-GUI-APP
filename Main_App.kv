<Main_Screen>:
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            id: tool_bar
            spacing: "10dp"
            title: "Text and Voice Note"
            left_action_items: [['menu', lambda x: nav_drawer.set_state("open") ]]

        MDTabs:
            id: tabs
            on_tab_switch: root.on_tab_switch(*args)
#        MDRelativeLayout:
#            radius : [25,]
#            size_hint: None, None
#            md_bg_color : app.theme_cls.primary_color
#            width: "100dp"
#            height: "100dp"

    MDNavigationDrawer:
        id: nav_drawer
        Nav_Drawer_Content:

<Nav_Drawer_Content>:
    orientation: "vertical"
    padding: "7dp"
    spacing: "7dp"

    AnchorLayout:
        id: anchor_la
        anchor_x:  "left"
        size_hint_y: None
        height: my_avatar.height

        Image:
            id: my_avatar
            canvas:
                Ellipse:
                    pos: anchor_la.x + 2, anchor_la.y + 4
                    size: 90,90
                    source: "Batman.png"
                    angle_start: 0
                    angle_end: 360


    MDLabel:
        text: "Narotsit Karki"
        font_style: "Button"
        size_hint_y: None
        height: self.texture_size[1]

    MDLabel:
        text: "narotsitkarki1234@gmail.com"
        font_style: "Caption"
        size_hint_y:None
        height: self.texture_size[1]


    ScrollView:
        DrawerList:
            id: md_list_1


<ItemDrawer>:
    on_press: root.callback(app)
    IconLeftWidget:
        id: icon
        icon: root.icon



<Recycle_Bin_Screen>:
    MDBoxLayout:
        orientation: "vertical"

    MDToolbar:
        title: "Recycle Bin"
        pos_hint: {'top': 1}
        left_action_items: [['keyboard-backspace', lambda x: root.return_back()]]

    ScrollView:
        size_hint: None , None
        height: root.height - 60
        width: root.width
        MDList:
            id: recycle_bin_list
            spacing: "12dp"




<Recycle_Bin_List>:
    IconLeftWidget:
        id: left_icon
        icon: "notebook-remove"

    IconRightWidget:
        id: right_icon
        icon: "restore"